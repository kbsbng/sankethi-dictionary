[
    {
        "settings": [ "master" ],
        "appPort": "80",
        "middleware": [ "middleware/bodyParser.js",
            "middleware/cookieParser.js",
            "middleware/session.js",
            "middleware/auth.js",
            "middleware/verifyAuth.js" ],
        "yui": {
            "config": {
                "debug": true,
                "logLevel": "debug"
            }
        },
        "specs": {
            "login": {
                "type": "HTMLFrameMojit",
                "config": {
                    "deploy": true,
                    "title": "Sankethi Dictionary - Login Page",
                    "child": {
                        "type": "LoginPage",
                        "config": {
                            "children": {
                                "header": {
                                    "type": "Header"
                                },
                                "login": {
                                    "type": "Login"
                                },
                                "footer": {
                                    "type": "Footer"
                                }
                            }
                        }
                    }
                }
            },
            "searchPage": {
                "type": "HTMLFrameMojit",
                "config": {
                    "deploy": true,
                    "title": "Sankethi Dictionary - Search Page",
                    "child": {
                        "type": "SearchPage",
                        "config": {
                            "children": {
                                "header": {
                                    "type": "Header"
                                },
                                "search": {
                                    "type": "Search"
                                },
                                "footer": {
                                    "type": "Footer"
                                }
                            }
                        }
                    },
                    "assets": {
                        "bottom": {
                            "js": ["/assets/js/pramukhime.js",
                                "/assets/js/pramukhindic.js"]
                        }
                    }
                }
            },
            "addWordPage": {
                "type": "HTMLFrameMojit",
                "config": {
                    "deploy": true,
                    "title": "Sankethi Dictionary - Add Word Page",
                    "child": {
                        "type": "AddWordPage",
                        "config": {
                            "children": {
                                "header": {
                                    "type": "Header",
                                    "action": "index"
                                },
                                "addWord": {
                                    "type": "AddWord"
                                },
                                "footer": {
                                    "type": "Footer",
                                    "action": "index"
                                }
                            }
                        }
                    },
                    "assets": {
                        "bottom": {
                            "js": ["/assets/js/pramukhime.js",
                                "/assets/js/pramukhindic.js"]
                        }
                    }
                }
            },
            "displayWordPage": {
                "type": "HTMLFrameMojit",
                "config": {
                    "deploy": true,
                    "title": "Sankethi Dictionary",
                    "child": {
                        "type": "DisplayWordPage",
                        "config": {
                            "children": {
                                "header": {
                                    "type": "Header"
                                },
                                "displayWord": {
                                    "type": "DisplayWord"
                                },
                                "footer": {
                                    "type": "Footer"
                                }
                            }
                        }
                    }
                }
            },
            "addWordResult": {
                "type": "AddWord"
            }
        }
    },
    {
        "settings": [ "environment:development" ],
        "staticHandling": {
            "forceUpdate": true
        }
    }
]
